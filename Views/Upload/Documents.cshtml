@{
    ViewBag.Title = "Documents";
}

<h2>Documents</h2>
@model List<string>
<table>
    <tr>
        <th>File Name</th>
        <th>Link</th>
    </tr>
    @for (var i = 0; i < Model.Count; i++)
    {
        <tr>
            <td>@Model[i].ToString()</td>
            <td>@Html.ActionLink("Download", "Download", new { ImageName = @Model[i].ToString() })</td>
        </tr>
    }
</table>

